@model Game

@{
    ViewData["Title"] = Model.Name;
}


<div class="card border-success rounded-4 mt-5 overflow-hidden" style="height: 600px;">
    <div class="card-body p-0 h-100">
        <!-- Ensure card body takes full height -->
        <div class="row g-0 h-100">
            <!-- Ensure the row takes full height of the card -->
            <div class="col-md-8 px-5 py-4 d-flex flex-column h-100">
                <!-- Full height column and flexbox layout -->
                <div>
                    <h1 class="text-success fs-1 fw-bolder">@Model.Name</h1>
                    <span class="badge bg-ingo fs-4 mb-4">@Model.Category?.Name</span>
                    <p class="fs-5 mt-5">@Model.Describtion</p>
                </div>
                <div class="flex-grow-1"></div> <!-- This pushes the icons to the bottom -->
                <div class="mt-auto">
                    <!-- This ensures the icons stay at the bottom -->
                    @foreach (var gameDevice in Model.Device)
                    {
                        <i class="@gameDevice.Device.Icon me-2 fs-1 text-secondary"></i>
                    }
                </div>
            </div>
            <div class="col-md-4 p-0 h-100">
                <img src="@($"{FileSettings.ImagePath}/{Model.Cover}")" alt="@Model.Name"
                     class="w-100 h-100" style="object-fit: cover;" /> <!-- Image fills its column -->
            </div>
        </div>
    </div>
</div>

